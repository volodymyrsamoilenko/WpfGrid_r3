<Window x:Class="WpfGrid_r3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGrid_r3"
        mc:Ignorable="d"
        Title="Grid" Height="592" Width="770">
    <StackPanel  Name="StackPnl" Height="522" Margin="11,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="730">
        <StackPanel.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform AngleX="0.39"/>
                <RotateTransform/>
                <TranslateTransform X="0.993"/>
            </TransformGroup>
        </StackPanel.RenderTransform>
        <WrapPanel HorizontalAlignment="Left" Height="40" Width="840">
            <TextBox x:Name="txtBoxSearch" Text="" Height="30" FontSize="16" TextWrapping="Wrap" Width="330"/>
            <Button x:Name="btnSearch" Content="Search" Click="btnSearch_Click" Height="30" Width="115" Margin="15,0,0,0"/>
            <Button x:Name="btnRefresh" Content="Refresh" Click="btnRefresh_Click" Height="30" Width="110" Margin="100,0,0,0"/>
        </WrapPanel>
        <ListView Name="ListView1" Height="480"/>
    </StackPanel>
</Window>
